#!/bin/sh

file_path="$HOME/.newsboat/urls"

echo "Enter desired search term, then choose a video from any channel you wish to add an rss feed for."

read -p "Search --> " search

if [ "$search" = "" ]; then
  echo "no search term"
  echo "exiting..."
  exit
fi

video=$(ytfzf -t -L "$search")

id=$(youtube-viewer --no-interactive --extract '*CHANNELID*' $video) 

if [ "$id" != "" ]; then
  echo "https://www.youtube.com/feeds/videos.xml?channel_id=$id" >> $file_path
  echo "Channel Id appended to $file_path"
else
  echo "no selection made..."
  echo "exiting..."
  sleep 1
  exit
fi


while true; do

read -p "Add another? [y/n]: " loop

case $loop in
  [yY] )  echo "Okay, adding another!" 
          sleep 1
          break;;
          
  [nN] )  echo "Exiting..."
          sleep 1
          exit;;
          
  [*]  )  echo "Invalid";;
esac
          
done

exec yt-rsslink 
